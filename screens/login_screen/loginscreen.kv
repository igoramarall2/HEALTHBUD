<LoginScreen>
    MDFloatLayout:
        orientation: 'horizontal'

        MDTopAppBar:
            title: "HealthBudd"
            elevation: 2
            specific_text_color: 1,1,1,1
            pos_hint: {"top":1}
            left_action_items: [["menu", lambda x: callback()]]
        
        Image:
            source: "imgs/splash-logo.png"
            size_hint: (0.3, 0.3)
            pos_hint: {"center_x":0.5, "center_y":0.7}
        
        MDLabel:
            text: 'Seja bem vindo!'
            font_style: "H5"
            halign: 'center'
            bold: True
            pos_hint: {"center_x":0.5, "center_y":0.5}
        MDLabel:
            text: 'Fa√ßa login para continuar'
            font_style: "Caption"
            halign: 'center'
            bold: True
            pos_hint: {"center_x":0.5, "center_y":0.45}
        MDTextField:
            hint_text: 'Email'
            pos_hint: {"center_x":0.5, "center_y":0.40}
            size_hint_x: .3
            icon_right: "email"
        MDTextField:
            hint_text: 'Senha'
            password: True
            show_password: True
            pos_hint: {"center_x":0.5, "center_y":0.32}
            size_hint_x: .3
            icon_right: "lock"
        MDRaisedButton:
            text: 'Entrar'
            text_color: 1,1,1,1
            font_size: 18
            pos_hint: {"center_x":0.5, "center_y":0.24}
            size_hint_x: .3
            elevation: 1
        MDRaisedButton:
            text: 'Entrar com Facebook'
            text_color: 1,1,1,1
            font_size: 18
            pos_hint: {"center_x":0.5, "center_y":0.18}
            md_bg_color: 0.18,0.58,1,1
            size_hint_x: .3
            elevation: 1
        MDRaisedButton:
            text: 'Entrar com Google'
            text_color: 1,1,1,1
            font_size: 18
            pos_hint: {"center_x":0.5, "center_y":0.12}
            md_bg_color: 0.89,0.25,0.2,1
            size_hint_x: .3
            elevation: 1
        MDRectangleFlatButton:
            text: 'Esqueci minha senha'
            custom_color: 3,3,3
            font_style: "Caption"
            halign: 'center'
            pos_hint: {"center_x":0.5, "center_y":0.05}